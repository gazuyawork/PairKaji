{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",             // ← ルート基準
    "paths": {
      "@/*": ["src/*"]          // ← ここをシンプルに修正（"./"を削除）
    },
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/hooks/useProfileImages.ts",
    "functions/index.ts",
    "functions/src/sendUpcomingTaskReminder.ts.bk"
  ],
  "exclude": ["node_modules"]
}
